{
    "version": "2.0.0",
    "tasks": [
        // ======================================================
        // CONFIGURE
        // ======================================================
        {
            "label": "Configure Debug",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--preset",
                "linux-debug"
            ],
            "group": "build"
        },
        {
            "label": "Configure Release",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--preset",
                "linux-release"
            ],
            "group": "build"
        },
        // ======================================================
        // DEBUG BUILDS — INDIVIDUAL DEMOS
        // ======================================================
        {
            "label": "Build Debug Backtest Demo",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "build/Debug",
                "--target",
                "backtest_demo",
                "-j8"
            ],
            "dependsOn": [
                "Configure Debug"
            ],
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Build Debug Logger Demo",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "build/Debug",
                "--target",
                "logger_demo",
                "-j8"
            ],
            "dependsOn": [
                "Configure Debug"
            ],
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Build Debug Grades Demo",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "build/Debug",
                "--target",
                "grades_demo",
                "-j8"
            ],
            "dependsOn": [
                "Configure Debug"
            ],
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ]
        },
        // ======================================================
        // ✅ DEBUG: BUILD ALL DEMOS (ZBIORCZY)
        // ======================================================
        {
            "label": "Build Debug All Demos",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "build/Debug",
                "--config",
                "Debug",
                "--parallel",
                "--target",
                "backtest_demo",
                "logger_demo",
                "grades_demo"
            ],
            "dependsOn": [
                "Configure Debug"
            ],
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ]
        },
        // ======================================================
        // DEBUG TESTS
        // ======================================================
        {
            "label": "Build Debug Tests",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "build/Debug",
                "--target",
                "tests",
                "-j8"
            ],
            "dependsOn": [
                "Configure Debug"
            ],
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Run Debug Tests",
            "type": "shell",
            "command": "ctest",
            "args": [
                "--test-dir",
                "build/Debug",
                "--output-on-failure"
            ],
            "dependsOn": [
                "Build Debug Tests"
            ],
            "group": "test"
        },
        // ======================================================
        // RELEASE BUILDS — INDIVIDUAL DEMOS
        // ======================================================
        {
            "label": "Build Release Backtest Demo",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "build/Release",
                "--target",
                "backtest_demo",
                "-j8"
            ],
            "dependsOn": [
                "Configure Release"
            ],
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Build Release Logger Demo",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "build/Release",
                "--target",
                "logger_demo",
                "-j8"
            ],
            "dependsOn": [
                "Configure Release"
            ],
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Build Release Grades Demo",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "build/Release",
                "--target",
                "grades_demo",
                "-j8"
            ],
            "dependsOn": [
                "Configure Release"
            ],
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ]
        },
        // ======================================================
        // ✅ RELEASE: BUILD ALL DEMOS (ZBIORCZY)
        // ======================================================
        {
            "label": "Build Release All Demos",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "build/Release",
                "--config",
                "Release",
                "--parallel",
                "--target",
                "backtest_demo",
                "logger_demo",
                "grades_demo"
            ],
            "dependsOn": [
                "Configure Release"
            ],
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ]
        },
        // ======================================================
        // RELEASE TESTS
        // ======================================================
        {
            "label": "Build Release Tests",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "build/Release",
                "--target",
                "tests",
                "-j8"
            ],
            "dependsOn": [
                "Configure Release"
            ],
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Run Release Tests",
            "type": "shell",
            "command": "ctest",
            "args": [
                "--test-dir",
                "build/Release",
                "--output-on-failure"
            ],
            "dependsOn": [
                "Build Release Tests"
            ],
            "group": "test"
        },
        // ======================================================
        // CLEAN
        // ======================================================
        {
            "label": "Clean Build",
            "type": "shell",
            "command": "rm",
            "args": [
                "-rf",
                "build"
            ],
            "group": "build"
        }
    ]
}