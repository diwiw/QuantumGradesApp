{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Configure Debug",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-S", ".",
                "-B", "build",
                "-G", "Ninja",
                "-DCMAKE_BUILD_TYPE=Debug"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "Configure Release",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-S", ".",
                "-B", "build",
                "-G", "Ninja",
                "-DCMAKE_BUILD_TYPE=Release"
            ],
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "Build Debug App",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build", "build",
                "--target", "app",
                "--config", "Debug",
                "-j4"
            ],
            "group": "build",
            "problemMatcher": ["$gcc"],
            "dependsOn": ["Configure Debug"]
        },
        {
            "label": "Build Debug Tests",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build", "build",
                "--target", "tests",
                "--config", "Debug",
                "-j4"
            ],
            "group": "build",
            "problemMatcher": ["$gcc"],
            "dependsOn": ["Configure Debug"]
        },
        {
            "label": "Build Release App",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build", "build",
                "--target", "app",
                "--config", "Release",
                "-j4"
            ],
            "group": "build",
            "problemMatcher": ["$gcc"],
            "dependsOn": ["Configure Release"]
        },
        {
            "label": "Build Release Tests",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build", "build",
                "--target", "tests",
                "--config", "Release",
                "-j4"
            ],
            "group": "build",
            "problemMatcher": ["$gcc"],
            "dependsOn": ["Configure Release"]
        },
        {
            "label": "Clean Build",
            "type": "shell",
            "command": "rm",
            "args": ["-rf", "build"],
            "problemMatcher": []
        }
    ]
}
