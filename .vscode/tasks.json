{
    "version": "2.0.0",
    "tasks": [
        // =========================
        // CONFIGURATION
        // =========================
        {
            "label": "Configure Debug",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-S",
                ".",
                "-B",
                "build/Debug",
                "-G",
                "Ninja",
                "-DCMAKE_BUILD_TYPE=Debug",
                "-DBUILD_LEGACY_DEMOS=ON"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "Configure Release",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-S",
                ".",
                "-B",
                "build/Release",
                "-G",
                "Ninja",
                "-DCMAKE_BUILD_TYPE=Release",
                "-DBUILD_LEGACY_DEMOS=ON"
            ],
            "group": "build",
            "problemMatcher": []
        },
        // =========================
        // DEBUG BUILDS
        // =========================
        {
            "label": "Build Debug Backtest_Demo",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "build/Debug",
                "--target",
                "backtest_demo",
                "--config",
                "Debug",
                "--parallel"
            ],
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ],
            "dependsOn": [
                "Configure Debug"
            ]
        },
        {
            "label": "Build Debug Grades_Demo (Legacy)",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "build/Debug",
                "--target",
                "grades_demo",
                "--config",
                "Debug",
                "--parallel"
            ],
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ],
            "dependsOn": [
                "Configure Debug"
            ]
        },
        {
            "label": "Build Debug Logger_Demo (Legacy)",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "build/Debug",
                "--target",
                "logger_demo",
                "--config",
                "Debug",
                "--parallel"
            ],
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ],
            "dependsOn": [
                "Configure Debug"
            ]
        },
        {
            "label": "Build Debug Tests",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "build/Debug",
                "--target",
                "tests",
                "--config",
                "Debug",
                "--parallel"
            ],
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ],
            "dependsOn": [
                "Configure Debug"
            ]
        },
        {
            "label": "Build Debug All Demos",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "build/Debug",
                "--config",
                "Debug",
                "--parallel",
                "--target",
                "backtest_demo",
                "logger_demo",
                "grades_demo"
            ],
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ],
            "dependsOn": [
                "Configure Debug"
            ]
        },
        // =========================
        // RELEASE BUILDS
        // =========================
        {
            "label": "Build Release Backtest_Demo",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "build/Release",
                "--target",
                "backtest_demo",
                "--config",
                "Release",
                "--parallel"
            ],
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ],
            "dependsOn": [
                "Configure Release"
            ]
        },
        {
            "label": "Build Release Grades_Demo (Legacy)",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "build/Release",
                "--target",
                "grades_demo",
                "--config",
                "Release",
                "--parallel"
            ],
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ],
            "dependsOn": [
                "Configure Release"
            ]
        },
        // =========================
        // UTILITIES
        // =========================
        {
            "label": "clang-tidy: fix project",
            "type": "shell",
            "command": "./tools/run-tidy-fix.sh",
            "problemMatcher": []
        },
        {
            "label": "cmake: build all",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "build/Debug",
                "--parallel"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "Clean Build",
            "type": "shell",
            "command": "rm",
            "args": [
                "-rf",
                "build"
            ],
            "problemMatcher": []
        }
    ]
}