{
    "version": 5,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 25
    },
    "configurePresets": [
        {
            "name": "base-vcpkg",
            "hidden": true,
            "generator": "Ninja",
            "cacheVariables": {
                "CMAKE_TOOLCHAIN_FILE": "/home/diw/Programming/projects_cpp/vcpkg/scripts/buildsystems/vcpkg.cmake",
                "VCPKG_FEATURE_FLAGS": "manifests"
            }
        },
        {
            "name": "linux-debug",
            "displayName": "Linux Debug (vcpkg)",
            "inherits": "base-vcpkg",
            "binaryDir": "build/Debug",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_CXX_COMPILER_LAUNCHER": "ccache",
                "BUILD_LEGACY_DEMOS": "ON"
            }
        },
        {
            "name": "linux-release",
            "displayName": "Linux Release (vcpkg)",
            "inherits": "base-vcpkg",
            "binaryDir": "build/Release",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_CXX_COMPILER_LAUNCHER": "ccache",
                "BUILD_LEGACY_DEMOS": "ON"
            }
        },
        {
            "name": "windows-release",
            "displayName": "Windows Release (MSVC + vcpkg + Ninja)",
            "inherits": "base-vcpkg",
            "binaryDir": "build/WindowsRelease",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "VCPKG_TARGET_TRIPLET": "x64-windows-static"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "build-linux-debug",
            "configurePreset": "linux-debug"
        },
        {
            "name": "build-linux-release",
            "configurePreset": "linux-release"
        },
        {
            "name": "build-windows-release",
            "configurePreset": "windows-release"
        },
        {
            "name": "build-linux-debug-cli",
            "displayName": "Build Debug CLI App",
            "configurePreset": "linux-debug"
        },
        {
            "name": "build-linux-release-cli",
            "displayName": "Build Release CLI App",
            "configurePreset": "linux-release"
        }
    ],
    "testPresets": [
        {
            "name": "unit-linux-debug",
            "displayName": "Run Unit Tests (Debug)",
            "configurePreset": "linux-debug",
            "execution": {
                "stopOnFailure": true
            }
        },
        {
            "name": "unit-linux-release",
            "displayName": "Run Unit Tests (Release)",
            "configurePreset": "linux-release",
            "execution": {
                "stopOnFailure": true
            }
        },
        {
            "name": "e2e-linux-debug",
            "displayName": "Run E2E Tests (Debug)",
            "configurePreset": "linux-debug",
            "execution": {
                "stopOnFailure": true
            }
        },
        {
            "name": "e2e-linux-release",
            "displayName": "Run E2E Tests (Release)",
            "configurePreset": "linux-release",
            "execution": {
                "stopOnFailure": true
            }
        }
    ]
}